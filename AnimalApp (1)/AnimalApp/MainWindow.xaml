<Window x:Class="AnimalApp.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:vm="clr-namespace:AnimalApp.ViewModels"
 Title="{DynamicResource App_Title}" Height="420" Width="740" WindowStartupLocation="CenterScreen">
  <Window.DataContext>
    <vm:MainViewModel/>
  </Window.DataContext>
  <DockPanel>
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#2B6CB0">
      <TextBlock Text="  AnimalApp  " Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="8"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
      <Label Content="{DynamicResource Lbl_Filter}" VerticalAlignment="Center"/>
      <TextBox Width="220" Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}"/>
      <Button Content="{DynamicResource Btn_Add}" Click="Add_Click"/>
      <Button Content="{DynamicResource Btn_Edit}" Click="Edit_Click"/>
      <Button Content="{DynamicResource Btn_Remove}" Click="Remove_Click"/>
    </StackPanel>

    <DataGrid x:Name="Grid" ItemsSource="{Binding View}" IsReadOnly="True" CanUserAddRows="False" AutoGenerateColumns="False">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Name" Binding="{Binding Name}" SortMemberPath="Name"/>
        <DataGridTextColumn Header="Species" Binding="{Binding Species}" SortMemberPath="Species"/>
        <DataGridTextColumn Header="Age" Binding="{Binding Age}" SortMemberPath="Age"/>
        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" SortMemberPath="Notes"/>
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</Window>
